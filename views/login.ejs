<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>IMD Q&A - login</title>
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.css">
	<link rel="stylesheet" href="/css/main.css">
	<script src="/socket.io/socket.io.js"></script>
</head>
<body>
<div class="container">


	<div class="header">
			<nav class="menu">
				<ul class="menu__ul">
					<li class="menu__item--first-child"><a href="/" class="menu__link menu__link--logo">IMD Q&A</a></li>

					<li class="menu__item"><a href="/login" class="menu__link"><span class="fa fa-user"></span> Login</a></li>
					<li class="menu__item"><a href="/signup" class="menu__link"><span class="fa fa-pencil-square-o"></span> Sign up</a></li>
				</ul>	
			</nav>
		</div>

		<div class="banner">
			<h1 class="banner__title">IMD Q&A</h1>
			<h3 class="banner__subtitle">LOGIN</h3>
		</div>

		<% if (message.length > 0) { %>
			<div class="form_notify--error"><%= message %></div>
		<% } %>

		<div class="form">
	
			<form action="/login" method="post">
				<input type="text" class="form__field--duo" name="email" placeholder="USERNAME">
				<input type="password" class="form__field--duo" name="password" placeholder="PASSWORD">

				<button type="submit" class="form__button--login">Login</button></br>
				<button type="submit" class="form__button--fb"><a href="/auth/facebook" class="form__link--fb">Facebook</a></button>
				
			</form>


			<p class="form__title">Need an account? <a href="/signup" class="form__title--decoration">Signup here</a></p>
	
		</div>

</div>
</body>
</html>
